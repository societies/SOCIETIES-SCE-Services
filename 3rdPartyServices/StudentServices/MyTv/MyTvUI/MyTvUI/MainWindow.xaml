                    <ImageBrush ImageSource="/MyTvUI;component/Images/group_background.png" />
                </DockPanel.Background>
               
               

                <Grid  Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="500" />
