<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	xmlns:context="http://www.springframework.org/schema/context">

	<!-- regular spring configuration file defining the beans for this bundle. 
		We've kept the osgi definitions in a separate configuration file so that 
		this file can easily be used for integration testing outside of an OSGi environment -->


	<bean id="askFree"  class="ac.hw.askfree.AskFree" name="askFree"  
		init-method="init" destroy-method="tearDown">
		<property name="serviceMgmt" ref="serviceMgmt"/>
		<property name="eventMgr" ref="eventMgr"/>	
		<property name="ctxBroker" ref="ctxBroker"></property>
		<property name="commManager" ref="commManager"></property>
		<property name="askFreeCommsClient" ref="askFreeCommsClient"></property>
	</bean>	
	

	<bean id="AskFreeCommsServer" class="ac.hw.askfree.comms.CommsServer"
	    init-method="InitService">
		<property name="commManager" ref="commManager"></property>
		<property name="askFreeServer" ref="askFree"></property>
	</bean>
	
	<bean id="askFreeCommsClient" class="ac.hw.askfree.comms.CommsClient"
		init-method="InitService">
		<property name="commManager" ref="commManager"></property>
	</bean>
	
</beans>